<h2>Afisare categorie</h2>
<br />

<p>@ViewBag.Category.Category_Name</p>
<p>@ViewBag.Category.Description</p>
<br />

<form method="post" action="/Categories/Delete/@ViewBag.Category.Id_Category">

    <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash"></i>Sterge categoria</button>

</form>

<br />

<a href="/Categories/Index" class="btn-outline-primary">Inapoi la categorii</a>

